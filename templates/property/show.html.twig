{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{  property.title }}</h1>
                    <h2>{{ property.rooms }} pieces - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-weight: bold ; font-size: 4rem;">{{ property.formattedPrice }}</div>
                    <a href="#" class=""btn btn-primary>Contact agence </a>
                </div>
            </div>
        </div>
    </div>
        <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <h2>characteristics</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Pieces</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Rooms</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Floor</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                    <tr>
                        <td>Heating</td>
                        <td>{{ property.heatType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>specialty</h2>
            </div>
        </div>

    </div>
{% endblock %}

